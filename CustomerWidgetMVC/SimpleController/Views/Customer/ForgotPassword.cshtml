            <i class="fa fa-car" aria-hidden="true" style="font-size: 35px;"></i>
            &nbsp;&nbsp;
            <h3>
                Customer Widget
            </h3>
        </div>
        <div style="justify-content: center;">
            <h6><b>Forget Password</b></h6>
        </div>
        <div class="text-success">
            @ViewBag.Message
        </div>
